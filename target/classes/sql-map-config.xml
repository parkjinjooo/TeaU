<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	<settings>
	<!-- 자동으로 카멜케이스 규칙으로 변환 -->
	<setting value="true" name="mapUnderscoreToCamelCase"/>
	</settings>

	<!-- Alias 설정 -->
	<typeAliases>
		<typeAlias type="com.teau.biz.subscribe.SubVO" alias="sub"></typeAlias>
	    <typeAlias type="com.teau.biz.subscribe.SubTeaVO" alias="subTea"></typeAlias>
		<typeAlias type="com.teau.biz.member.MemberVO" alias="member"></typeAlias>
		<typeAlias type="com.teau.biz.board.BoardVO" alias="board" />
		<typeAlias type="com.teau.biz.board.RBoardVO" alias="Rboard" />
		<typeAlias type="com.teau.biz.board.ReplyVO" alias="reply" />
		<typeAlias type="com.teau.biz.shop.ShopVO" alias="shop" />
		<typeAlias type="com.teau.biz.orders.CartVO" alias="cart" />
		<typeAlias type="com.teau.biz.orders.OrdersVO" alias="orders"/>
	</typeAliases>
	
	<!-- Sql Mapper 설정 -->
	<mappers>
		<mapper resource="mappings/subscribe-mapping.xml" />
		<mapper resource="mappings/member-mapping.xml" />
		<mapper resource="mappings/board-mapping.xml"/>
		<mapper resource="mappings/reply-mapping.xml"/>
		<mapper resource="mappings/shop-mapping.xml"/>	
		<mapper resource="mappings/cart-mapping.xml"/>	
		<mapper resource="mappings/orders-mapping.xml"/>
	</mappers>
</configuration>
